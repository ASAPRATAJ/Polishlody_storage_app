ScreenManager:
    MenuScreen:
    ProductName:
    ProductValue:
    ShowRecords:

<MenuScreen>
    name: 'menu'
    Image:
        source: 'polish_lody.jpeg'
        allow_stretch: True

    MDRectangleFlatButton:
        text: 'Dodaj/usuń nazwę produktu'
        theme_text_color: "Custom"
        md_bg_color: (0.49, 0.35, 0.27, .6)
        text_color: "white"
        line_color: "green"
        pos_hint: {'center_x':0.25, 'center_y':0.75}
        size_hint: (.4, .398)
        on_press: root.manager.current = 'product_name'

    MDRectangleFlatButton:
        text: 'Dodaj/usuń wartość istniejącego już produktu'
        theme_text_color: "Custom"
        md_bg_color: (0.49, 0.35, 0.27, .6)
        text_color: "white"
        line_color: "green"
        pos_hint: {'center_x':0.75, 'center_y':0.75}
        size_hint: (.4, .398)
        on_press: root.manager.current = 'product_value'

    MDRectangleFlatButton:
        text: 'Wyświetl stan magazynu'
        md_bg_color: (0.49, 0.35, 0.27, .6)
        text_color: "white"
        line_color: "green"
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        size_hint: (.8, .4)
        on_press: root.manager.current = 'show_records'

<ProductName>
    name: 'product_name'
    GridLayout:
        rows: 2
        FloatLayout:
            MDTextField:
                id: product_name
                hint_text: "Podaj nazwę produktu"
                pos_hint: {'center_x':.5, 'center_y':0.9}
                size_hint_x: None
                width: 1600
            MDRectangleFlatButton:
                text: 'Dodaj'
                pos_hint: {'center_x':0.95, 'center_y':0.95}
                on_press: root.add_product_name()
            MDRectangleFlatButton:
                text: 'Usuń'
                pos_hint: {'center_x':0.95, 'center_y':0.85}
                on_press: root.delete_product_name()
            MDIconButton:
                icon: 'arrow-left'
                pos_hint: {'center_x':0.03, 'center_y':0.95}
                size: '48', '48'
                on_press: root.manager.current = 'menu'

<ProductValue>
    name: 'product_value'
    MDTextField:
        id: product_name
        hint_text: 'Podaj nazwę produktu'
        pos_hint: {'center_x': 0.5, 'center_y': 0.90}
        size_hint_x: None
        width: 1600
    MDTextField:
        id: product_value
        hint_text: 'Podaj wartość produktu'
        pos_hint: {'center_x': 0.5, 'center_y': 0.80}
        size_hint_x: None
        width: 1600
    MDRectangleFlatButton:
        text: 'Dodaj'
        pos_hint: {'center_x':0.95, 'center_y':0.9}
        on_press: root.add_product_value()
    MDRectangleFlatButton:
        text: 'Odejmij'
        pos_hint: {'center_x':0.95, 'center_y':0.8}
        on_press: root.subtract_product_value()
    MDIconButton:
        icon: 'arrow-left'
        pos_hint: {'center_x':0.035, 'center_y':0.95}
        size: '48', '48'
        on_press: root.manager.current = 'menu'

<ShowRecords>
    name: 'show_records'
    screen: screen
    Screen:
        id: screen
    MDRectangleFlatButton:
        text: 'back'
        pos_hint: {'center_x':0.85, 'center_y':0.95}
        on_release: root.manager.current = 'menu'
